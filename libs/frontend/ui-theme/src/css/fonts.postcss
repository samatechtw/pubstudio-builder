  font-family: 'Plex';
  src:
    url('../font/IBMPlexSansMedium.woff2') format('woff2'),
    url('../font/IBMPlexSansMedium.woff') format('woff'),
    url('../font/IBMPlexSansMedium.ttf') format('truetype');
