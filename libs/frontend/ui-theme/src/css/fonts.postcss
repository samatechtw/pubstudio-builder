@font-face {
  font-family: 'Plex';
  src:
    url('../font/IBMPlexSans.woff2') format('woff2'),
    url('../font/IBMPlexSans.woff') format('woff'),
    url('../font/IBMPlexSans.ttf') format('truetype');
  font-weight: 400;
  font-style: normal;
  font-display: swap;
}

